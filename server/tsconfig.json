{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "lib": ["es5", "es6", "es7", "dom"],
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
